<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui centered huge header"><%=blog.title%></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %> ">
                <div class="content datepost">
                     <span> Created on <%= blog.created.toDateString() %> </span>
                      
                </div>
             <div class="description contentpost">
                 <p> <%- blog.body %> </p>  
             </div>
             <div class="showbuttons">
                 <a class="ui green inverted button" href="/blogs/<%=blog._id%>/edit">Edit</a>
             <form id="delete" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                 <button type="submit" class="ui red inverted button">Delete</button>
             </form>
             </div>
             
        </div>
    </div>
        
      

</div>
<% include ./partials/footer %>